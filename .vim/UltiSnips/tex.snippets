###############################################################################
# Section headers
###############################################################################

snippet s "\section{ ... }" b
\section{$1}
$0
endsnippet

snippet s* "\section{ ... }" b
\section*{$1}
$0
endsnippet

snippet ss "\subsection{ ... }" b
\subsection{$1}
$0
endsnippet

snippet ss* "\subsection{ ... }" b
\subsection*{$1}
$0
endsnippet

snippet sss "\subsubsection{ ... }" b
\subsubsection{$1}
$0
endsnippet

snippet sss* "\subsubsection{ ... }" b
\subsubsection*{$1}
$0
endsnippet

snippet par "\paragraph" b
\paragraph{$1}
$0
endsnippet

###############################################################################
# Text formatting
###############################################################################

snippet red "{\color{red} ... }" w
{\color{red} $1}$0
endsnippet

snippet blue "{\color{blue} ... }" w
{\color{blue} $1}$0
endsnippet

snippet bf "\textbf{ ... }" w
\textbf{$1}$0
endsnippet

snippet it "\textit{ ... }" w
\textit{$1}$0
endsnippet

snippet tt "\texttt{ ... }" w
\texttt{$1}$0
endsnippet

###############################################################################
# Various
###############################################################################

snippet "b(egin)?" "begin{} / end{}" br
\begin{${1:something}}
${0:${VISUAL}}
\end{$1}
endsnippet

snippet todo "\todo[inline]" b
\todo[inline]{$1}$0
endsnippet

snippet today "YYYY-MM-DD" w
`date +%Y-%m-%d`
endsnippet

snippet now "HH:MM" w
`date +%H:%M`
endsnippet

snippet tab "tabular" b
\begin{tabularx}{$1X}
    \toprule
    $0
    \midrule
    \bottomrule
\end{tabularx}
endsnippet

snippet mc "\multicols" b
\begin{multicols}{2}
$0
\end{multicols}
endsnippet

snippet fig "\begin{figure}" b
\begin{figure}
    \begin{center}
        \includegraphics[width=.9\columnwidth]{$1} \\
        \caption{$0}
        \label{fig:$1}
    \end{center}
\end{figure}
endsnippet

snippet tcb "\begin{tcolorbox}" b
\begin{tcolorbox}[title=$1,parbox=false]
    $0
\end{tcolorbox}
endsnippet

###############################################################################
# Lists
###############################################################################

snippet ezl "\begin{easylist}" b
\begin{easylist}
    & $1
\end{easylist}
$0
endsnippet

snippet itemize "\begin{itemize}" b
\begin{itemize}
    \item $0
\end{itemize}
endsnippet

snippet desc "\begin{description}" b
\begin{description}
    \item[$1] $0
\end{description}
endsnippet

###############################################################################
# Tables
###############################################################################

snippet tabx "\tabularx" b
\begin{tabularx}{\columnwidth}{$1}
    \toprule
    $0
    \midrule
    \bottomrule
\end{tabularx}
endsnippet

###############################################################################
# Math
###############################################################################
snippet frac "\frac{...}{...}" w
\frac{$1}{$2}$0
endsnippet

snippet nfrac "\nicefrac{...}{...}" w
\nicefrac{$1}{$2}$0
endsnippet

snippet bmat "bmatrix []" w
\begin{bmatrix} $1 \\\\ $2 \end{bmatrix}$0
endsnippet

snippet pmat "pmatrix ()" w
\begin{pmatrix} $1 \\\\ $2 \end{pmatrix}$0
endsnippet

snippet vec "vector" w
\vec{$1}$0
endsnippet

snippet align "\begin{align*} ..." b
\begin{align*}
    $1
\end{align*}
$0
endsnippet



###############################################################################
# Minted
###############################################################################

snippet mc "\begin{minted}{c}" b
