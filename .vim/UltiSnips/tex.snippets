$1
\end{minted}
$0
endsnippet

snippet mic "\mintinline{c}{ ... }" w
\mintinline{c}{$1}$0
endsnippet

snippet mb "\begin{minted}{bash}" b
\begin{minted}{bash}
$1
\end{minted}
$0
endsnippet

snippet mib "\mintinline{bash}{ ... }" w
\mintinline{bash}{$1}$0
endsnippet

snippet mj "\begin{minted}{java}" b
\begin{minted}{java}
$1
\end{minted}
$0
endsnippet

snippet mij "\mintinline{java}{ ... }" w
\mintinline{java}{$1}$0
endsnippet

snippet mt "\begin{minted}{text}" b
\begin{minted}{text}
$1
\end{minted}
$0
endsnippet

snippet mit "\mintinline{text}{ ... }" w
\mintinline{text}{$1}$0
endsnippet
